{
	"extends": "plasmo/templates/tsconfig.base",
	"exclude": ["node_modules", "build"],
	"include": [
		".plasmo/index.d.ts",
		".plasmo/**/*",
		"./**/*.ts",
		"./**/*.tsx",
		"tests/**/*.ts"
	],
	"compilerOptions": {
		"paths": {
			"~*": ["./src/*"]
		},
		"baseUrl": ".",
		"module": "ES6",
		"target": "ES6",
		"allowSyntheticDefaultImports": true
	},
}
